<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="275dp"
    android:layout_height="200dp"
    android:padding="@dimen/common_dimen_default"
    android:layout_margin="@dimen/common_dimen_default"
    app:cardCornerRadius="@dimen/common_dimen_default"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background_menu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_album"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/common_dimen_min" />

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podcast Name"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/itemImage"
            app:layout_constraintTop_toTopOf="@id/cardView"
            android:layout_margin="@dimen/common_dimen_default"
            android:maxLines="2" />

        <TextView
            android:id="@+id/itemDesciption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@id/cardView"
            app:layout_constraintTop_toBottomOf="@id/itemImage"
            app:layout_constraintBottom_toBottomOf="@id/cardView"
            android:layout_margin="@dimen/common_dimen_default"
            android:maxLines="3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>



